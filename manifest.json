{
  "manifest_version": 2,
  "name": "Ideal Size",
  "short_name": "Ideal Size",
  "description": "Resize the window to the most ideal size",
  "version": "1.2.0",
  "applications": {
    "gecko": {
      "id": "idealsize@mozilla.kewis.ch"
    }
  },

  "icons": {
    "32": "images/addon.svg"
  },

  "permissions": [
    "activeTab",
    "tabs"
  ],

  "page_action": {
    "default_icon": "images/addon.svg",
    "default_title": "Ideal Size",
    "browser_style": false,
    "show_matches": [
      "https://docs.google.com/document*",
      "https://developer.mozilla.org/*",
      "https://bugzilla.mozilla.org/*",
      "https://github.com/*",
      "https://www.di.fm/*"
    ]
  },

  "background": {
    "scripts": [
      "background/background.js"
    ]
  }
}
